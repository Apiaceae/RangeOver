<h1>Listing collections</h1>

<table>
  <thead>
    <tr>
      <th>Uniqueid</th>
      <th>Herbarium</th>
      <th>Accession</th>
      <th>Barcode</th>
      <th>Collector</th>
      <th>Collnumber</th>
      <th>Colldate</th>
      <th>Country</th>
      <th>Province</th>
      <th>County</th>
      <th>Locality</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.uniqueid %></td>
        <td><%= collection.herbarium %></td>
        <td><%= collection.accession %></td>
        <td><%= collection.barcode %></td>
        <td><%= collection.collector %></td>
        <td><%= collection.collnumber %></td>
        <td><%= collection.colldate %></td>
        <td><%= collection.country %></td>
        <td><%= collection.province %></td>
        <td><%= collection.county %></td>
        <td><%= collection.locality %></td>
        <td><%= collection.address %></td>
        <td><%= collection.latitude %></td>
        <td><%= collection.longitude %></td>
        <td><%= link_to 'Show', collection %></td>
        <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
        <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Collection', new_collection_path %>

<%= will_paginate @collections %>
